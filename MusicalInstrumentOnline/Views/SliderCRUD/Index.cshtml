@model IEnumerable<MusicalInstrumentOnline.Models.Slider>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
.input{
    color: white;
    color: white;
    background-color: white;
}
</style>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagepath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description3)
            </td>
            <td>
                <img src=@Url.Content("~/Home/img/" + item.imagepath) asp-append-version="true"
                     width="100" height="100" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
